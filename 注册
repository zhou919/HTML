<script>
//验证密码强度
function checkStrength()
{
	var strength = document.getElementById("strength");
	var psw1 = document.getElementById("psw1").value;
	var length = psw1.length;
	if (length<=6)
	{
		strength.innerHTML="用户";
	}
	else if(length>=3&&length<6)
	{
		strength.innerHTML="中";
	}
	else
	{
		strength.innerHTML="强";
	}
}
//用户名
function checkusername()
{
	var username = document.getElementById("username").value;
	var length = username.length;
	var strength = document.getElementById("strength");
	if(length<=6)
	{
		strength.innerHTML='用户名应大于6位';
	}
}
//验证两次输入密码是否一致
function checkPSW()
{
	var psw1 = document.getElementById("psw1").value;
	var psw2 = document.getElementById("psw2").value;
	var pswInfo = document.getElementById("pswInfo");
	if(psw1!=psw2)
	{
		pswInfo.innerHTML='两次输入的密码必须一致';
	}
}
//注册方法
function reg()
{
	var username = document.getElementById("username").value;
	var email = document.getElementById("email").value;

	
	
	if(document.getElementById("username").checkValidity()//判断用户名是否通过校验
	  &&document.getElementById("stunum").checkValidity()//判断学号是否通过校验
	  
	  &&document.getElementById("email").checkValidity()//判断电子邮箱是否通过校验
	  
	  
	)
	{
		alert(
			'确认注册信息\n'+
			'用户名：'+username+'\n'+
			'电子邮箱：'+email+'\n'+
			'学号：'+stunum+'\n'
			
		)	
	}
}
</script>
<form>
<fieldset>
<legend>用户注册页面</legend>
<center>
<div style="padding:5px;width=600px">
	<h4>用户登录信息</h4>
	<table width='100%'>
		<tr>
			<td width='20%'>用户名</td>
			<td width='40%'><input id="username" type="text" required="true"onkeyup=
"checkusername()"/></td>
			<td width='40%'><font color="red">*</font><span id="strength"></span></td>
		</tr>
		<tr>
			<td>电子邮箱</td>
			<td><input id="email" type="email" required="true"/></td>
			<td><font color="red">*</font></td>
		</tr>
		<tr>
			<td>学号</td>
			<td><input   id="stunum"   type="number"   required="true" /></td>
			<td><font color="red">*</font> </td>
		</tr>
		<tr>
		
	</table>

<input type="submit" value="注册新用户" onclick="reg()">
<input type="reset" value="重置">
</center>
</fieldset>
</form>
</body>
