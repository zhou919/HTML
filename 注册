<script>




//注册方法
function reg()
{
	var username = document.getElementById("username").value;
	var email = document.getElementById("email").value;

	
	
	if(document.getElementById("username").checkValidity()//判断用户名是否通过校验
	  &&document.getElementById("stunum").checkValidity()//判断学号是否通过校验
	  
	  &&document.getElementById("email").checkValidity()//判断电子邮箱是否通过校验
	  
	  
	)
	{
		alert(
			'确认注册信息\n'+
			'用户名：'+username+'\n'+
			'电子邮箱：'+email+'\n'+
			'学号：'+stunum+'\n'
			
		)	
	}
}
</script>
<form>
<fieldset>
<legend>用户注册页面</legend>
<center>
<div style="padding:5px;width=600px">
	<h4>用户登录信息</h4>
	<table width='100%'>
		<tr>
			<td width='20%'>用户名</td>
			<td width='40%'><input id="username" type="text" required="true" pattern="^(?![0-9]+$)(?![a-zA-Z]+$)[0-9A-Za-z]{7,}$"/><br> <span style="color:red;font-size:12px">必须为英文和数字组合,且长度大于6位</td>
			<td width='40%'><font color="red">*</font><span id="strength"></span></td>
		</tr>
		<tr>
			<td>电子邮箱</td>
			<td><input id="email" type="email" required="true"/></td>
			<td><font color="red">*</font></td>
		</tr>
		<tr>
			<td>学号</td>
			<td><input   id="stunum"   type="number"   required="true" /></td>
			<td><font color="red">*</font> </td>
		</tr>
		<tr>
		
	</table>

<input type="submit" value="注册新用户" onclick="reg()">
<input type="reset" value="重置">
</center>
</fieldset>
</form>
